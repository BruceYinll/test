<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim25"
        android:layout_marginRight="@dimen/dim25"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/perfectinfo_dialog_takefhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_bg_apply_dialog"
            android:gravity="center"
            android:paddingBottom="@dimen/dim25"
            android:paddingTop="@dimen/dim25"
            android:text="@string/perfectinfo_takephoto"
            android:textColor="@color/white"
            android:textSize="@dimen/dim33" />        

        <TextView
            android:id="@+id/perfectinfo_dialog_selectfromphotograph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim1"
            android:background="@drawable/round_corner_bg_apply_dialog"
            android:gravity="center"
            android:paddingBottom="@dimen/dim25"
            android:paddingTop="@dimen/dim25"
            
            android:text="@string/perfectinfo_selectphotofromphotograph"
            android:textColor="@color/white"
            android:textSize="@dimen/dim33" />
    </LinearLayout>

    <TextView
        android:id="@+id/perfectinfo_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim25"
        android:layout_marginRight="@dimen/dim25"
        android:layout_marginTop="@dimen/dim20"
        android:layout_marginBottom="@dimen/dim8"
        android:background="@drawable/round_corner_bg_apply_dialog"
        android:gravity="center"
        android:paddingBottom="@dimen/dim25"
        android:paddingTop="@dimen/dim25"
        android:text="@string/cancel"
        android:textColor="#51a6f6"
        android:textSize="@dimen/dim33" />

</LinearLayout>