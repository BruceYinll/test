<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim72"
        android:background="#4a4c53"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shebei_data_listview_item_xuhao" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#d4d4d5"
            android:textSize="@dimen/txt28"
            android:text="序号"/>
        <TextView 
            android:id="@+id/shebei_data_listview_item_mingcheng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#d4d4d5"
            android:textSize="@dimen/txt28"
            android:text="名称"/>
        <TextView 
            android:id="@+id/shebei_data_listview_item_shuzhi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#d4d4d5"
            android:textSize="@dimen/txt28"
            android:text="数值"/>
        <TextView
            android:id="@+id/shebei_data_listview_item_danwei" 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#d4d4d5"
            android:textSize="@dimen/txt28"
            android:text="单位"/>
    </LinearLayout>

</LinearLayout>
