<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35383f"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim106"
        android:gravity="center_vertical" 
        android:background="#2d3037">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim35"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/back" />
      
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_information"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="用户简介"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt42" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim35"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <Button 
                android:id="@+id/tijiao"
                android:layout_width="@dimen/dim108"
                android:layout_height="@dimen/dim57"
                android:text="确定"
                android:textSize="@dimen/txt28"
                android:textColor="@color/white"
                android:background="@drawable/round_corner_bg_tijiao"/>
      
        </LinearLayout>
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="@dimen/dim642"
          android:layout_height="@dimen/dim232"
          android:layout_marginTop="@dimen/dim44"
          android:layout_gravity="center">
       <EditText
          android:id="@+id/user_description"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="top"          
          android:textSize="@dimen/dim30" 
          android:textColor="@color/white"
          android:hint="注册用户简介..."
          android:padding="@dimen/dim20"
          android:background="@drawable/round_corner_bg_password"
          android:inputType="textMultiLine" >

       </EditText>
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dim594"
           android:layout_marginTop="@dimen/dim194"
           android:text="0/200"
           />
     </RelativeLayout>
</LinearLayout>
