<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim102"
        android:text="提示"
        android:textColor="#fffefe"
        android:textSize="@dimen/txt36"
        android:gravity="center"/>
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim32"  
        android:text="授权信息已提交,请等待验证" 
        android:textColor="#f7f7f7"
        android:textSize="@dimen/txt27"
        android:gravity="center_horizontal"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1" 
        android:layout_marginTop="@dimen/dim44"
        android:background="#444852"/>
    <TextView
        android:id="@+id/tuichu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90" 
        android:text="退出应用"
        android:textColor="#51a6f6"
        android:textSize="@dimen/txt36"
        android:gravity="center"></TextView>
</LinearLayout>
