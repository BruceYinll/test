<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
         android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim102"
        android:text="联系客服"
        android:textColor="#fffefe"
        android:textSize="@dimen/txt36"
        android:gravity="center"/>
    <TextView 
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim32"  
        android:text="400-2633-1233" 
        android:textColor="#f7f7f7"
        android:textSize="@dimen/txt27"
        android:gravity="center_horizontal"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1" 
        android:layout_marginTop="@dimen/dim44"
        android:background="#444852"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
        android:id="@+id/quxiao"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dim90" 
        android:text="取消"
        android:textColor="#51a6f6"
        android:textSize="@dimen/txt36"
        android:gravity="center"></TextView>
      <View 
        android:layout_width="@dimen/dim1"
        android:layout_height="@dimen/dim90" 
        android:background="#444852"/>
      <TextView
        android:id="@+id/queding"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dim90" 
        android:text="确定"
        android:textColor="#51a6f6"
        android:textSize="@dimen/txt36"
        android:gravity="center"></TextView>
    </LinearLayout>
    
</LinearLayout>
