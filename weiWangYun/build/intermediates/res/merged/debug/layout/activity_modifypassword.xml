<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35383f"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim106"
        android:gravity="center_vertical" 
        android:background="#2d3037">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim35"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/back" />
      
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_information"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="密码修改"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt42" />
        </LinearLayout>

        
    </RelativeLayout>  
    
    <EditText
                android:id="@+id/old_password"
                android:layout_width="@dimen/dim642"
                android:layout_height="@dimen/dim90"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="@dimen/txt30" 
                android:textColor="#747476"
                android:drawablePadding="@dimen/dim30"
                android:paddingLeft="@dimen/dim30"
                android:layout_marginTop="@dimen/dim44"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_corner_bg_phone"
                />
    <EditText
                android:id="@+id/new_password"
                android:layout_width="@dimen/dim642"
                android:layout_height="@dimen/dim90"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="@dimen/txt30" 
                android:textColor="#78797b"
                android:drawablePadding="@dimen/dim30"
                android:paddingLeft="@dimen/dim30"
                android:layout_marginTop="@dimen/dim24"
                android:layout_gravity="center_horizontal"              
                android:background="@drawable/round_corner_bg_password"/>
    <EditText
                android:id="@+id/new_password_confirm"
                android:layout_width="@dimen/dim642"
                android:layout_height="@dimen/dim90"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="@dimen/txt30" 
                android:textColor="#78797b"
                android:drawablePadding="@dimen/dim30"
                android:paddingLeft="@dimen/dim30"
                android:layout_marginTop="@dimen/dim24"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_corner_bg_password"/>
    <Button
            android:id="@+id/submit"
            android:layout_width="@dimen/dim642"
            android:layout_height="@dimen/dim90"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/txt36"
            android:layout_marginTop="@dimen/dim66"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner_bg_login"
            />
    
</LinearLayout>
