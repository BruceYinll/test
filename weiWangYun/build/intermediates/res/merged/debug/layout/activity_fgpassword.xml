<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim106"
        android:gravity="center_vertical" 
        android:background="#2d3037">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim35"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/back" />
      
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_information"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="忘记密码"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt42" />
        </LinearLayout>

        
    </RelativeLayout>  
    
    <LinearLayout
           android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#35383f"
            >
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim544"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
          
      <EditText
               
                android:id="@+id/phone_number"
                android:layout_width="@dimen/dim642"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="15.4sp"
                android:textColor="@color/white" 
                android:drawablePadding="15.4sp"
                android:paddingLeft="15.4sp"
                android:drawableLeft="@drawable/user_phone"
                android:layout_marginTop="@dimen/dim48"
                android:background="@drawable/round_corner_bg_phone"/>
      <com.sptd.eyun.widget.EditTextCheckNumber
                android:id="@+id/check_number"
                android:layout_width="@dimen/dim642"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:inputType="text"
                android:maxLength="16"
                android:textSize="15.4sp"
                android:layout_marginTop="@dimen/dim25"
                android:layout_gravity="center_horizontal"      
       >                
    </com.sptd.eyun.widget.EditTextCheckNumber>
      <EditText
                android:id="@+id/password_text"
                android:layout_width="@dimen/dim642"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请设置新密码(6-12位,字母或数字)"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="15.4sp"
                android:textColor="@color/white" 
                android:drawablePadding="15.4sp"
                android:paddingLeft="15.4sp"
                android:drawableLeft="@drawable/user_password"
                android:layout_marginTop="@dimen/dim25"
                android:background="@drawable/round_corner_bg_password"/>
      <EditText
                android:id="@+id/password_confirm"
                android:layout_width="@dimen/dim642"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="15.4sp"
                android:textColor="@color/white" 
                android:drawablePadding="15.4dp"
                android:paddingLeft="15.4sp"
                android:drawableLeft="@drawable/user_password"
                android:layout_marginTop="@dimen/dim25"
                android:layout_marginBottom="@dimen/dim66"
                android:background="@drawable/round_corner_bg_password"/>
      </LinearLayout>
      <LinearLayout 
          android:layout_width="match_parent"
           android:layout_height="0dp"     
           android:layout_weight="1"
          android:orientation="vertical"          
          >                                  
         <Button
            android:id="@+id/apply_button"
            android:layout_width="@dimen/dim642"
            android:layout_height="46.2dp"
            android:layout_marginBottom="36.9dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="18.5sp"
            android:background="@drawable/round_corner_bg_login"
            /> 
      </LinearLayout>
      
       
    </LinearLayout>          
</LinearLayout>
